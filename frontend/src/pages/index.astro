<style>
	body {
		background-color: var(--neutral-100);
		overflow-x: hidden;
	}

	.hero {
		z-index: 0;
		position: relative;
		isolation: isolate;
		padding-bottom: 6rem;
	}

	.hero-decor {
		position: absolute;
		inset: 0;
		right: -4rem;
		left: -10rem;
		bottom: -8rem;
		z-index: -1;
		filter: blur(16rem);
		pointer-events: none;
		user-select: none;
	}

	.hero-container {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 2rem;
		margin-top: 4rem;
	}

	.hero-container .text {
		display: flex;
		flex-direction: column;
		justify-content: center;
		gap: 0.75rem;
		color: var(--neutral-900);
	}

	.hero-container .text p {
		margin: 0;
	}

	.hero-container .buttons {
		display: flex;
		gap: 1rem;
	}

	.hero-container .img {
		display: grid;
		place-items: center;
		background-color: rgba(255, 255, 255, 0.7);
		border-radius: 2rem;
		border: 4px solid var(--neutral-900);
		padding: 6rem 0;
		margin: 4rem 0;
	}

	.showcase::before {
		z-index: -1;
		content: '';
		display: block;
		position: absolute;
		inset: 0;
		left: -50vw;
		right: -50vw;
		background-color: var(--neutral-0);
	}

	.showcase {
		padding: 6rem 0;
		isolation: isolate;
		position: relative;
		display: grid;
		grid-template-columns: 4fr 6fr;
		gap: 2rem;
		color: var(--neutral-900);
	}

	.showcase .img {
		max-width: 23rem;
	}

	.showcase .text {
		display: flex;
		flex-direction: column;
		justify-content: center;
		max-width: 34.5rem;
	}

	.showcase .text h2 {
		margin-bottom: 1rem;
	}

	.showcase .text p {
		margin-top: 0;
	}

	.testimonials {
		padding: 6rem 0;
	}

	.testimonials .cards .card:nth-child(1) {
		--accent-color: var(--yellow-500);
	}

	.testimonials .cards .card:nth-child(2) {
		--accent-color: #B9DAFF;
	}

	.testimonials .cards .card:nth-child(3) {
		--accent-color: #FFC4C4;
	}

	.testimonials h2 {
		text-align: center;
		margin-bottom: 4rem;
	}

	.testimonials .cards {
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
		gap: 2rem;
	}

	.testimonials .card {
		--accent-color: blue;
		background-color: var(--neutral-200);
		border-radius: 0.75rem;
		border-right: 4px solid var(--accent-color);
		border-bottom: 4px solid var(--accent-color);
		padding: 0 1.25rem;
		margin-bottom: 1.5rem;
		padding-bottom: 1.5rem;
		color: var(--neutral-900);
		position: relative;

		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.testimonials .card > svg {
		position: absolute;
		top: 0.75rem;
		right: 1rem;
	}

	.testimonials .card > svg + div {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding-bottom: 2rem;
	}

	.testimonials .stars {
		margin-top: 0.75rem;
		margin-bottom: 2rem;
		display: flex;
		width: fit-content;
		gap: 0;
		background-color: var(--neutral-100);
		padding: 2px 10px;
		border-radius: 50vmax;
	}

	.testimonials .stars svg {
		fill: var(--accent-color);
	}

	.testimonials .persona {
		position: absolute;
		bottom: 0;
		background-color: var(--neutral-100);
		height: 3rem;
		border: 1px solid var(--neutral-900);
		transform: translateY(50%);
		display: flex;
		align-items: center;
		gap: 0.5rem;
		border-radius: 0.5rem;
	}

	.testimonials .persona p {
		margin: 0;
		margin-left: 1rem;
	}

	.testimonials .persona img {
		all: unset;
		display: block;
		width: 3rem;
		height: 3rem;
		background-color: var(--accent-color);
		outline: 1px solid var(--neutral-900);
		outline-offset: -1px;
		border-radius: 0.5rem;
	}
</style>

<style is:inline>
	.hero .buttons .btn.xlarge.outlined {
		outline: 2px solid var(--neutral-900);
		outline-offset: -2px;
		background-color: var(--neutral-100);
	}

	.showcase .text a {
		margin-top: 2rem;
	}
</style>