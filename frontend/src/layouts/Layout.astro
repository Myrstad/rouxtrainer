---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import SEO from "../components/SEO.astro";
import "../styles/global.css";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import PreviewImage from "../assets/Preview.png"

// Props
interface Props {
    title?: string;
    description?: string;
    image?: ImageMetadata;
}

const { title, description = "A Rubik's cube trainer made for ROUX", image = PreviewImage } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<SEO title={title} description={description} image={PreviewImage} />
	</head>
	<body>
		<Navbar></Navbar>
		<div class="container">
			<Breadcrumbs></Breadcrumbs>
			<slot />
		</div>
		<Footer></Footer>
	</body>
</html>

<style is:global>
	
	html,
	body {
		margin: 0;
		min-height: 100vh;
	}

	body {
		padding-top: 4rem; /* Header size + 1rem for padding */
		display: flex;
		flex-direction: column;
	}
</style>
